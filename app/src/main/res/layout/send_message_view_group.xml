    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/send_text_message"
        android:paddingHorizontal="4dp"
        android:paddingBottom="4dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/white"/>

    <com.pavelshelkovenko.tfs_spring_2024_shelkovenko.presentation.custom_views.FlexBoxLayout
        android:id="@+id/send_flex_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:horizontalContentPadding="8dp"
        app:verticalContentPadding="8dp">

    </com.pavelshelkovenko.tfs_spring_2024_shelkovenko.presentation.custom_views.FlexBoxLayout>

</merge>