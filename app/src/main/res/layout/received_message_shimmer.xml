<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_avatar_shimmer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/user_avatar"
        android:scaleType="centerCrop"
        android:background="@drawable/shimmer_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircularAvatarShape" />

    <TextView
        android:id="@+id/textMessage_shimmer"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/shimmer_background"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/user_avatar_shimmer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:background="@drawable/shimmer_background"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="4dp"
        android:paddingTop="4dp"
        android:textColor="@color/green"
        app:layout_constraintStart_toEndOf="@+id/user_avatar_shimmer"
        app:layout_constraintTop_toBottomOf="@+id/textMessage_shimmer" />


</androidx.constraintlayout.widget.ConstraintLayout>